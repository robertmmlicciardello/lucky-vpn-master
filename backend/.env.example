
# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=lucky_vpn_master
DB_USER=your_db_username
DB_PASSWORD=your_secure_db_password

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=30d

# Admin JWT (separate secret for admin authentication)
JWT_ADMIN_SECRET=your-admin-jwt-secret-different-from-user-jwt

# Server Configuration
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://your-frontend-domain.com

# Security Secrets
GAME_SECRET=your-game-validation-secret-key
PAYMENT_SECRET=your-payment-validation-secret-key

# OneConnect API Configuration
ONECONNECT_API_URL=https://api.oneconnect.com/v1
ONECONNECT_API_KEY=your_oneconnect_api_key
ONECONNECT_SECRET=your_oneconnect_secret

# Payment Gateway Configuration
# KPay
KPAY_MERCHANT_ID=your_kpay_merchant_id
KPAY_API_KEY=your_kpay_api_key
KPAY_SECRET_KEY=your_kpay_secret_key

# Wave Money
WAVE_MERCHANT_ID=your_wave_merchant_id
WAVE_API_KEY=your_wave_api_key
WAVE_SECRET=your_wave_secret

# AYA Pay
AYA_MERCHANT_ID=your_aya_merchant_id
AYA_API_KEY=your_aya_api_key
AYA_SECRET=your_aya_secret

# CB Pay
CB_MERCHANT_ID=your_cb_merchant_id
CB_API_KEY=your_cb_api_key
CB_SECRET=your_cb_secret

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_specific_password

# SMS Configuration (optional)
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=YourApp

# Firebase Admin SDK (for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase Private Key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Redis Configuration (for caching and session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
PAYMENT_RATE_LIMIT_MAX=10

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
